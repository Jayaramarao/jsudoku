<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="Sudoku-src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Sudoku.jar" basedir="build/classes">
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/Sudoku.jar" fork="true"/>
    </target>
    
    <!--<project name="Build" default="build" basedir="."> 

    <property file="props.properties"/> -->

    <taskdef resource="checkstyletask.properties" classpath="${checkstyle.jar.path}"/>

    <target name="checkstyle">
        <echo>Starting checkstyle</echo>
        <checkstyle config="rules/sun_checks.xml" failOnViolation="false">
            <fileset dir="src" includes="**/*.java"/>
            <formatter type="plain"/>
            <formatter type="xml" toFile="build/checkstyle_errors.xml"/>
        </checkstyle>
        <echo>Checkstyle finished</echo>
    </target>

</project>
